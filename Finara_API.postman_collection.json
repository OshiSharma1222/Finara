{
  "info": {
    "name": "Finara API",
    "description": "Blockchain-based asset tokenization and lending platform for banks",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseURL",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "bankAddress",
      "value": "0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266",
      "type": "string"
    },
    {
      "key": "customer1",
      "value": "0x70997970C51812dc3A010C7d01b50e0d17dc79C8",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/health",
          "host": ["{{baseURL}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "2. API Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/",
          "host": ["{{baseURL}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "3. Deploy Bank",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bankAddress\": \"{{bankAddress}}\",\n  \"bankName\": \"Test Bank\",\n  \"tokenName\": \"Test Token\",\n  \"tokenSymbol\": \"TEST\",\n  \"maxSupply\": \"1000000\",\n  \"collateralizationRatio\": 15000\n}"
        },
        "url": {
          "raw": "{{baseURL}}/api/deployBank",
          "host": ["{{baseURL}}"],
          "path": ["api", "deployBank"]
        }
      }
    },
    {
      "name": "4. Get Bank Details",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/api/bank/{{bankAddress}}",
          "host": ["{{baseURL}}"],
          "path": ["api", "bank", "{{bankAddress}}"]
        }
      }
    },
    {
      "name": "5. Upload Customers",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bankAddress\": \"{{bankAddress}}\",\n  \"customers\": [\n    {\n      \"name\": \"John Doe\",\n      \"accountId\": \"ACC001\",\n      \"walletAddress\": \"0x70997970C51812dc3A010C7d01b50e0d17dc79C8\"\n    },\n    {\n      \"name\": \"Jane Smith\",\n      \"accountId\": \"ACC002\",\n      \"walletAddress\": \"0x3C44CdDdB6a900fa2b585dd299e03d12FA4293BC\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseURL}}/api/uploadCustomers",
          "host": ["{{baseURL}}"],
          "path": ["api", "uploadCustomers"]
        }
      }
    },
    {
      "name": "6. Get Customers by Bank",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/api/customers/{{bankAddress}}",
          "host": ["{{baseURL}}"],
          "path": ["api", "customers", "{{bankAddress}}"]
        }
      }
    },
    {
      "name": "7. Verify Customer",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/api/customer/{{customer1}}",
          "host": ["{{baseURL}}"],
          "path": ["api", "customer", "{{customer1}}"]
        }
      }
    },
    {
      "name": "8. Mint Tokens",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bankAddress\": \"{{bankAddress}}\",\n  \"recipientAddress\": \"{{customer1}}\",\n  \"amount\": \"100\",\n  \"assetId\": \"GOLD001\",\n  \"assetType\": \"gold\"\n}"
        },
        "url": {
          "raw": "{{baseURL}}/api/mintToken",
          "host": ["{{baseURL}}"],
          "path": ["api", "mintToken"]
        }
      }
    },
    {
      "name": "9. Check Balance",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/api/balance/{{customer1}}?bankAddress={{bankAddress}}",
          "host": ["{{baseURL}}"],
          "path": ["api", "balance", "{{customer1}}"],
          "query": [
            {
              "key": "bankAddress",
              "value": "{{bankAddress}}"
            }
          ]
        }
      }
    },
    {
      "name": "10. Create Loan",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bankAddress\": \"{{bankAddress}}\",\n  \"borrowerAddress\": \"{{customer1}}\",\n  \"collateralAmount\": \"50\",\n  \"loanAmount\": \"30\",\n  \"interestRate\": 5,\n  \"durationDays\": 30\n}"
        },
        "url": {
          "raw": "{{baseURL}}/api/createLoan",
          "host": ["{{baseURL}}"],
          "path": ["api", "createLoan"]
        }
      }
    },
    {
      "name": "11. Get Loans by Bank",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/api/loans/{{bankAddress}}",
          "host": ["{{baseURL}}"],
          "path": ["api", "loans", "{{bankAddress}}"]
        }
      }
    },
    {
      "name": "12. Get Loan Details",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/api/loan/1?bankAddress={{bankAddress}}",
          "host": ["{{baseURL}}"],
          "path": ["api", "loan", "1"],
          "query": [
            {
              "key": "bankAddress",
              "value": "{{bankAddress}}"
            }
          ]
        }
      }
    },
    {
      "name": "13. Repay Loan",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bankAddress\": \"{{bankAddress}}\",\n  \"amount\": \"31.5\"\n}"
        },
        "url": {
          "raw": "{{baseURL}}/api/repayLoan/1",
          "host": ["{{baseURL}}"],
          "path": ["api", "repayLoan", "1"]
        }
      }
    }
  ]
}
